{
    "id": "/schemas/entities/board/definitios/post/entities/canonic/index.json",
    "type": "object",
    "properties": {
        "label": {
            "type": "string",
            "example": "My board",
            "minLength": 1,
            "maxLength": 255
        },
        "background": { "$ref": "/schemas/entities/boardBackground/definitions/post/entities/canonic/index.json" },
        "contents": { "$ref": "/schemas/entities/content/definitions/post/entities/canonic/index.json" },
        "contentsState": { "$ref": "/schemas/entities/contensState/definitions/post/entities/canonic/index.json" },
        "state": { "$ref": "/schemas/entities/board/entities/state/index.json" },
        "labels": {
            "type": "array",
            "description": "Board labels",
            "example": ["news"],
             "uniqueItems": true,
            "items": {
                "type": "string",
                "maxLength": 255
            },
            "minItems": 0
        },
        "description": {
            "type": "string",
            "description": "Board description",
            "example": "Best Moto site 2",
            "maxLength": 255
        },
        "display": {
            "type": "string",
            "example": "MAX",
            "enum": ["MAX", "FULLSCREEN", "CUBE"]
        },
        "privacy": {
            "type": "string",
            "example": "PRIVATE",
            "default": "PRIVATE",
            "enum": ["PUBLIC", "PRIVATE", "UNLISTED"]
        }
    },
    "required": ["label"],
    "additionalProperties": true
}
