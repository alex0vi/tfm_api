{
    "id": "/schemas/entities/board/definitios/get/entities/preview/index.json",
    "type": "object",
    "description": "Main fs board Schema",
    "allOf": [
        { "$ref": "/schemas/entities/board/entities/common/index.json" },
        {
            "properties": {
                "labels": {
                    "type": "array",
                    "description": "Board labels",
                    "example": ["news"],
                     "uniqueItems": true,
                    "items": {
                        "type": "string",
                        "maxLength": 255
                    },
                    "minItems": 0
                },
                "numberOfCubes": {
                    "type": "integer",
                    "example": 9
                },
                "user": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "integer",
                            "description": "User identifier",
                            "example": 36
                        },
                        "firstName": {
                            "type": "string",
                            "description": "user firstname",
                            "example": "Daniel",
                            "maxLength": 255
                        },
                        "lastName": {
                            "type": "string",
                            "description": "user lastname",
                            "example": "Tiati",
                            "maxLength": 255
                        },
                        "avatar": { "$ref": "/schemas/entities/image/definitions/get/entities/avatar/index.json" }
                    }
                }
            }
        }
    ]
}
