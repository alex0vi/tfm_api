{
    "id": "/schemas/entities/board/entities/common/index.json",
    "type": "object",
    "description": "Board item description",
    "properties": {
        "id": {
            "type": "integer",
            "description": "Board identifier tag",
            "example": 162
        },
        "label": {
            "type": "string",
            "description": "Board name",
            "example": "My board",
            "maxLength": 255
        },
        "background": {
            "$ref": "/schemas/entities/boardBackground/definitions/get/entities/canonic/index.json"
        },
        "description": {
            "type": "string",
            "description": "Board description",
            "example": "Best Moto site 2",
            "maxLength": 255
        },
        "display": {
            "type": "string",
            "example": "MAX",
            "enum": ["MAX", "FULLSCREEN", "CUBE"]
        },
        "privacy": {
            "type": "string",
            "example": "PRIVATE",
            "default": "PRIVATE",
            "enum": ["PUBLIC", "PRIVATE", "UNLISTED"]
        }
    }
}
