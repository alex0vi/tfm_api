{
    "id": "/schemas/entities/user/entities/common/common.json",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "description": "User identifier tag",
            "example": 20
        },
        "firstName": {
            "type": "string",
            "description": "User's first name",
            "example": "Emilio",
            "maxItems": 255
        },
        "lastName": {
            "type": "string",
            "description": "User's last name",
            "example": "Soca",
            "maxItems": 255
        },
        "description": {
            "type": "string",
            "description": "User's description",
            "example": "Reading"
        },
        "avatar": {
            "$ref": "/schemas/entities/image/definitions/get/entities/avatar/index.json"
        },
        "cover": {
            "$ref": "/schemas/entities/image/definitions/get/entities/cover/index.json"
        },
        "followers": {
            "type": "integer",
            "description": "Number of followers",
            "example": 10,
            "minimum": 0
        },
        "following": {
            "type": "integer",
            "description": "Number of followings",
            "example": 20,
            "minimum": 0
        },
        "friends": {
            "type": "integer",
            "description": "Number of friends",
            "example": 10,
            "minimum": 0
        },
        "labels": {
            "type": "array",
            "description": "Labels selected by user",
            "uniqueItems": true,
            "example": ["sports", "science"],
            "items": {
                "type": "string"
            },
            "minItems": 0
        }
    },
    "required": [
        "id",
        "firstName",
        "lastName",
        "description",
        "avatar",
        "cover",
        "followers",
        "following",
        "labels"
    ]
}
