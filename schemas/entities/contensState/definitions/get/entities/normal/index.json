
{
    "id": "/schemas/entities/contensState/definitions/get/entities/normal/index.json",
    "type": "object",
    "description": "One content state for each content either web, tv, radio or game created on this board",
    "properties": {
        "isMuted": {
            "type": "boolean",
            "description": "Cube muted",
            "example": true
        },
        "isPined": {
            "type": "boolean",
            "description": "Cube pined",
            "example": false
        },
        "isFrozen": {
            "type": "boolean",
            "example": false,
            "description": "Cube frozen"
        },
        "windowState": {
            "type": "string",
            "enum": ["MAX", "MIN", "NORMAL"],
            "description": "Window State",
            "example": "NORMAL"
        },
        "visualizationMode": {
            "type": "string",
            "description": "Visualization Mode",
            "enum": ["NORMAL", "MINI"],
            "example": "NORMAL"
        },
        "style": {
            "type": "object",
            "description": "Css styles defined from client side",
            "properties": {
                "top": {
                    "type": "string",
                    "example": "1105px"
                },
                "left": {
                    "type": "string",
                    "example": "439px"
                },
                "width": {
                    "type": "string",
                    "example": "400px"
                },
                "height": {
                    "type": "string",
                    "example": "50px"
                },
                "margin": {
                    "type": "string",
                    "example": "0px"
                },
                "position": {
                    "type": "string",
                    "example": "absolute"
                }
            }
        }
    }
}
